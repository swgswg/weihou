<template name="tabBar">
    <view class="tabBar">
        <block wx:for="{{tabBar}}" wx:for-item="item" wx:key="tabBar">
            <view class="tabBar-item">
                <navigator open-type="redirect" url="{{item.pagePath}}">
                    <view><image class="icon" src='{{item.iconPath}}'></image></view>
                    <view class="tabBartext">{{item.text}}</view>
                </navigator>  
            </view>
        </block>
    </view>
</template>

<!--带下拉选项的按钮  -->
<template name="selectNav">
    <view class="selectNav">
        <block wx:for="{{selectNav.nav}}" wx:for-item="nav" wx:key="{{index}}">
            <view class="selectNav-item" data-index='{{index}}'>{{nav}}</view>
        </block>
    </view>
    <view class='selectNav-list'>
        <block wx:for="{{selectNav.list[selectNav.currentNav]}}" wx:for-item="list" wx:key="{{index}}">
            <view>  
                {{list}}
            </view>
        
        </block>
    </view>
</template>
