/* pages/template/template.wxss */
.icon {
    width: 44rpx;
    height: 44rpx;
}

.tabBar {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 999999;
    display: flex;
    justify-content: space-around;
    width: 100%;
    height: 98rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    background: #f7f7fa;
    font-size: 24rpx;
    color: #8a8a8a;
    box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}

.tabBar-item navigator {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 178rpx;
    height: 98rpx;
    /* padding-top: 11rpx */
}

/*当前字体颜色*/
.tabBartext {
    margin-top: -5rpx;
    color: red;
}

.selectNav {
    display: flex;
    justify-content: space-around;
}
.selectNav-item{
    width: 150rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border: 1rpx solid red;
}
.nav-active{
    border-bottom: 4rpx solid red;
}