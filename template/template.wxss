.tabBar{
    position: fixed;
    left: 0;
    bottom:0;
    z-index: 999999;
    display: flex;
    justify-content: space-around;
    width:100%;
    height: 98rpx;
    padding: 0 10rpx;
    box-sizing: border-box; 
    background:#F7F7FA;
    font-size:24rpx;
    color:#8A8A8A;
    box-shadow: 6rpx 6rpx 6rpx 6rpx #aaa;
}
.tabBar-item navigator{
