.form-each {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 100rpx;
    padding-left: 20rpx;
    border-bottom: 1px solid #ccc;
}

.label {
    width: 150rpx;
    height: 100rpx;
    text-align: right;
    line-height: 100rpx;
    /* border: 1px solid red; */
}

input {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    /* border: 1rpx solid #ccc; */
}

.btn {
    padding: 0 20rpx;
    box-sizing: border-box;
}

.img {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
    height: 580rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.img-scroll {
    width: 100%;
    height: 580rpx;
}

.img image {
    width: 340rpx;
    height: 136rpx;
    margin-bottom: 20rpx;
    /* border: 1px solid red; */
}
