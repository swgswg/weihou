<form bindsubmit="addBankCard" class='form'>
    <view class='form-each'>
        <label class='label'>姓名：</label>
        <input name="owner" placeholder='请输入您的姓名'/>
    </view>
    <view class='form-each'>
        <label class='label'>手机：</label>
        <input name="mobile" type='number' placeholder='请输入您的手机号'/>
    </view>
    <view class='form-each'>
        <label class='label'>身份证：</label>
        <input name="ID_card" type='number' placeholder='请输入您的身份证号'/>
    </view>
    <view class='form-each'>
        <label class='label'>银行卡：</label>
        <input name="card_no" type='number' placeholder='请输入您的银行卡号'/>
    </view>
    <view class='form-each'>请选择开户行：{{bank}}</view>
    <scroll-view scroll-y class='img-scroll'>
        <view class='img'>
                <image catchtap='selectBank' data-bank="中国农业银行" src="/images/bank/ABC.png"/>
                <image catchtap='selectBank' data-bank="交通银行" src="/images/bank/BCM.png"/>
                <image catchtap='selectBank' data-bank="中国银行" src="/images/bank/BOC.png"/>
                <image catchtap='selectBank' data-bank="中国建设银行" src="/images/bank/CCB.png"/>
                <image catchtap='selectBank' data-bank="中国光大银行" src="/images/bank/CEB.png"/>
                <image catchtap='selectBank' data-bank="中信银行" src="/images/bank/CITICIB.png"/>
                <image catchtap='selectBank' data-bank="招商银行" src="/images/bank/CMB.png"/>
                <image catchtap='selectBank' data-bank="中国民生银行" src="/images/bank/CMBC.png"/>
                <image catchtap='selectBank' data-bank="华夏银行" src="/images/bank/HB.png"/>
                <image catchtap='selectBank' data-bank="海口联合农商银行" src="/images/bank/HK.png"/>
                <image catchtap='selectBank' data-bank="中国工商银行" src="/images/bank/ICBC.png"/>
                <image catchtap='selectBank' data-bank="中国平安银行" src="/images/bank/PABC.png"/>
                <image catchtap='selectBank' data-bank="浦发银行" src="/images/bank/SPDB.png"/>
        </view>
    </scroll-view>
    <view class='btn'>
         <button type='primary' formType="submit" class='mt10 '>提交</button>
    </view>
</form>
