.add-cart-btn{ background:#e64340; color: #fff; border-radius: 0;}

.attr_list{padding:10px 10px 5px 10px;width:100%;clear:both;display:block;}
.attr_list_t{float: left;}
.attr_list_li{float:left;padding:0px 10px;border:1px solid #ddd;margin-right:5px;}
.on{border:1px solid #ff0000; color:#fff;background: #ff0000;}
.icon-close{ width: 24px; height: 24px; border-radius: 50%; border: 1px solid #ccc; line-height: 24px; text-align: center;margin:5px 5px 0 0;}

.backtop{ position: fixed; right: 30rpx; bottom: 56px; z-index: 9; font-size:48rpx;}
.backtop .iconfont{ width: 80rpx; height: 80rpx; line-height: 80rpx; text-align: center; border-radius: 50%; display: block; color: #fff; opacity: 0.9; margin-top:20rpx;}

